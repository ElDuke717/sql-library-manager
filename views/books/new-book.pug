extends ../layout

block content
    h1=title

        if(error) 
            h2.errors Oops an error occurred!
            ul.errors
                each err in error
                    li.err
                        =err.message

    form(action="/books", method="post")
        p
            label(for='title') Title
            input#title(name='title' type='text')
        p
            label(for='author') Author
            input#author(name='author' type='text')
        p
            label(for='genre') Genre
            input#genre(name='genre' type='text')
        p
            label(for='year') Year
            input#year(name='year' type='text')
        
        input(type='submit' value='Create New Book' class='new-book')
    p
        a.button(href='../') Cancel