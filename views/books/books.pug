extends ../layout

block content
    h1=title 
    div.book-list-func 
        a(href='/books/new', class="new-book") Add a book to the list
        form(action='#' method='get')
                input#search-input.search-input(type='search' placeholder='Search books')
                input#search-submit.search-submit(type='submit' value='ðŸ”Ž')
        img(src='/static/images/library_books_3.svg' alt='picture of books' class="small-bookpic")
    br
    div.book-list
    h2#not-found
    table(class='book-table') 
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
        tbody.table-data
            each book in books
                tr.book-item 
                    td.book-title 
                        a(href=`/books/${book.id}`) #{book.title}
                    td.book-author=book.author
                    td.book-genre=book.genre 
                    td.book-year=book.year
    .pagination
        ul.link-list
        //- Pagination buttons are dynamically added here.                